<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thorin.dicoding">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.GithubUsers">
        <activity
            android:name=".view.UserDetail"
            android:label="@string/title_activity_user_detail"
            android:theme="@style/Theme.GithubUsers.NoActionBar" />
        <activity android:name=".view.UserActivity" /> <!-- Menerapkan Tema SplashTheme Pengganti Tampilan Layout. -->
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>